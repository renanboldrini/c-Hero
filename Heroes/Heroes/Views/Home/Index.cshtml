        color: #e7dfdd;
    }

    .p-descricao-herois {
        margin: 7px 0 0 0;
    }

    .img-apresentacao-herois {
        max-width: 175px;
        max-height: 230px;
        border-radius: 3px;
        width: 70%;
    }

    .botao-detalhe-heroi {
        width: 63%;
        height: 30px;
        padding: 0;
        margin-top: 10px;
        background: #1a1724;
        border: #4717f6 solid;
        color: #e7dfdd;
    }

