        width: 32px;
        margin-top: 9px;
    }
    .div-btn-p {
        padding: 0;
    }
    #perdedor1 {
        display:none;
    }
    #campeao1 {
        display:none;
    }
    #perdedor2 {
        display:none;
    }
    #campeao2 {
        display:none;
    }
    #btn-fig {
    margin-top: 80px;
    }
    #img-vs {
    width: 60px;
    margin-top: 140px;
    }



</style>










<div id="fundo-apresentacao-herois" class="text-center container-fluid">
    <div class="row">
        <div class="col-md-1 col-xs-0">
        </div>
        <div class="col-md-4 col-xs-5">
            <div id="campeao1" class="campeao">
