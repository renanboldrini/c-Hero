<style type="text/css">
    body {
        background: #392091;
    }

    #fundo-apresentacao-herois {
        background-color: #0e0b16;
    }

    .contorno {
        border-radius: 3px;
        background-color: #1a1724;
        padding: 15px 0 5px 0;
        margin: 10px 0 10px 0;
