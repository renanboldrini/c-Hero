            </div>
        </div>
        <div class="col-md-1 col-xs-0">
        </div>
    </div>

</div>

<div class="container">
    <div class="row">
        <div class="col-sm-1 col-xs-0">
        </div>
        <div class="col-sm-10 col-xs-12">
            <div class="marg-row-correcao row">


                @foreach (var item in Model)
                {


                    <div onclick="trocaHerois(@Html.DisplayFor(modelItem => item.Id))" class="padding-col-heroi-selecao col-md-2 col-xs-3">
                        <div data-toggle="tooltip" title="@Html.DisplayFor(modelItem => item.SuperName)" id="@Html.DisplayFor(modelItem => item.Id)" class="background-herois-selecao" style="background-image: url('@Html.DisplayFor(modelItem => item.Img)')">
                            <p id="imge-@Html.DisplayFor(modelItem => item.Id)" class="texto-informativo">
                                @Html.DisplayFor(modelItem => item.Img)
                            </p>

                            <p id="nome-@Html.DisplayFor(modelItem => item.Id)" class="texto-informativo">
                                @Html.DisplayFor(modelItem => item.Name)
                            </p>

                            <p id="superNome-@Html.DisplayFor(modelItem => item.Id)" class="texto-informativo">
                                @Html.DisplayFor(modelItem => item.SuperName)
                            </p>

                            <p id="universo-@Html.DisplayFor(modelItem => item.Id)" class="texto-informativo">
                                @Html.DisplayFor(modelItem => item.Universe)
                            </p>

                            <p id="planeta-@Html.DisplayFor(modelItem => item.Id)" class="texto-informativo">
                                @Html.DisplayFor(modelItem => item.Planet.Name)
                            </p>

                            <p id="categoria-@Html.DisplayFor(modelItem => item.Id)" class="texto-informativo">
                                @Html.DisplayFor(modelItem => item.Categoria.Name)
                            </p>

                            <p id="p1-@Html.DisplayFor(modelItem => item.Id)" class="texto-informativo">
                                @Html.DisplayFor(modelItem => item.Power1)
                            </p>

                            <p id="p2-@Html.DisplayFor(modelItem => item.Id)" class="texto-informativo">
                                @Html.DisplayFor(modelItem => item.Power2)
                            </p>

                            <p id="p3-@Html.DisplayFor(modelItem => item.Id)" class="texto-informativo">
                                @Html.DisplayFor(modelItem => item.Power3)
                            </p>

                            <p id="descr-@Html.DisplayFor(modelItem => item.Id)" class="texto-informativo">
                                @Html.DisplayFor(modelItem => item.Description)
                            </p>

                            <p id="force-@Html.DisplayFor(modelItem => item.Id)" class="texto-informativo">
                                @Html.DisplayFor(modelItem => item.Force)
                            </p>
                        </div>
                    </div>
                }




            </div>
        </div>
        <div class="col-sm-1 col-xs-0">
        </div>
    </div>
</div>


<!-- Modal -->
<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 id="titulo-modal" class="modal-title">Modal Header</h4>
            </div>
            <div id="descricao-modal" class="modal-body">
                <p>Some text in the modal.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

